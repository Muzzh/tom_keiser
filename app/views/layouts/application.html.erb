<!DOCTYPE html>
<html>
  <head>
    <title>Tom Keiser</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="top-brand">
      <%= link_to 'TOM KEISER', root_path, class: 'brand' %>
    </div>
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-faded site-nav fixed-top">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto pull-left">
          <li class="nav-item">
            <%= link_to 'Home', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Articles', articles_index_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Courses info', courses_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Israel', '#', class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Forum', '#', class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Info', '#', class: 'nav-link' %>
          </li>
        </ul>
        <ul class= 'navbar-nav pull-right'>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <br />
    <div class="page-container text-center">
      <%= yield %>
    </div>
  </body>
</html>
