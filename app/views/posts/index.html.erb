<h1>Blog</h1>

<% if current_user.try(:admin?) %>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-warning' %>
<% end %>

<br />

<% @posts.each do |post| %>
  <div class="post-box">
    <h1><%= link_to post.title, post_path(post) %></h1>
    <br />
    <p><%= post.body %></p>
    
  </div>

<% end %>